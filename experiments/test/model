#!/usr/bin/env python
from nanopelican.layers import *
from nanopelican.scripts import run
from keras import layers, Model

def CreateModel(shape, conf):
    x = x_in = layers.Input(shape)

    x = InnerProduct(conf['inner_product'])(x)
    x = Lineq2v2(hollow=True, symmetric=True, num_avg=conf['num_avg'])(x)
    x = DiagBiasDense(units=conf['n_hidden'])(x)
    x = layers.Activation(conf['activation'])(x)
    x = Lineq2v0(num_avg=conf['num_avg'])(x)
    x = layers.Dense(conf['n_outputs'])(x)
    x = layers.Activation(activation=conf['out_activ'])(x)

    return Model(inputs=x_in, outputs=x)

def main():
    run(CreateModel)

if __name__ == '__main__':
    main()

